<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Do+Hyeon" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/code_add.css">
  <link rel="stylesheet" href="/stylesheets/mobile.css">
  <script>
    function onAddSubmit(){
    var id = document.getElementById('idInput').value;
    var flatform =  document.getElementById('flatformInput').value;
    var main_time =  document.getElementById('main_timeInput').value;
    var location =  document.getElementById('locationInput').value;
    var age =  document.getElementById('ageInput').value;
    var comment =  document.getElementById('commentInput').value;
    var code_password =  document.getElementById('code_passwordInput').value;
  
  if(id.length > 50) { 
    alert("제목은 50글자 이상 입력할 수 없습니다."); 
    return false; 
  } 
  if(id == "") { 
    alert("아이디를 입력 해 주세요"); 
    return false; 
  } 
  if(flatform.length > 15) { 
    alert("플랫폼은 15글자 이상 입력할 수 없습니다."); 
    return false; 
  } 
  if(flatform == "") { 
    alert("플랫폼을 입력 해 주세요"); 
    return false; 
  } 
  if(main_time == "") { 
    alert("플레이 하시는 주요시간대를 입력 해 주세요"); 
    return false; 
  }  
  if(location.length > 10) { 
    alert("장소는 10글자 이상 입력할 수 없습니다."); 
    return false; 
  } 
  if(location == "") { 
    alert("현재 거주하는 도시를 입력 해 주세요"); 
    return false; 
  } 
  if(age.length > 11) { 
    alert("나이는 11글자 이상 입력할 수 없습니다."); 
    return false; 
  } 
  if(age == "") { 
    alert("나이를 입력 해 주세요"); 
    return false; 
  } 
  if(comment.length > 20) { 
    alert("코멘트는 20글자 이상 입력할 수 없습니다."); 
    return false; 
  } 
  if(code_password.length > 15) { 
    alert("패스워드는 15글자 이상 입력할 수 없습니다."); 
    return false; 
  } 
  }
    </script>
  <title></title>
</head>
<body>
    <form method="POST" action="/code_add" onsubmit="return onAddSubmit()">
      <div id="container" style="width:100vw">
      <div id="form_style">
        <h2>친구 코드 작성<span><input type="button" value="뒤로가기" class="backward_button" onclick="window.location.href='/friends_code'"></span></h2>
          <div class="form-group">
            <label for="id">아이디:</label>
            <input type="text" class="form-control" id="idInput" placeholder="Anthem을 플레이 하는 플랫폼의(Origin, Steam, PSN, XBOX LIVE)아이디를 입력하세요" name="idInput">
          </div>
          <div class="form-group">
            <label for="flatform">플랫폼:</label>
            <input type="text" class="form-control" id="flatformInput" placeholder="(Steam, Origin, Uplay, PS4, XBOX ONE)" name="flatformInput">
          </div>
          <div class="form-group">
            <label for="main_time">주 시간대:</label>
            <input type="text" class="form-control" id="main_timeInput" placeholder="(XX:XX~XX:XX)" name="main_timeInput">
          </div>
          <div class="form-group">
            <label for="location">지역:</label>
            <input type="text" class="form-control" id="locationInput" placeholder="(도시이름)" name="locationInput">
          </div>
          <div class="form-group">
            <label for="age">나이:</label>
            <input type="text" class="form-control" id="ageInput" name="ageInput">
          </div>
          <div class="form-group">
            <label for="comment">한 줄 코멘트:</label>
            <input type="text" class="form-control" id="commentInput" placeholder="(20자 이내로 코멘트를 적어주세요)" name="commentInput">
          </div>
          <div class="form-group">
            <label for="code_password">비밀번호:</label>
            <input type="password" class="form-control" id="code_passwordInput" placeholder="(글 수정 할때 필요한 비밀번호를 입력 해 주세요)" name="code_passwordInput">
          </div>
          <div class="form-group"> 
          <button type="submit" class="code_button">등록하기</button>
          </div>
        </div>
</div>
</form> 
</body>
</html>